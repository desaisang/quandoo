<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/reservedstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="reserved"
            android:src="@mipmap/reserved"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/table_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/action_settings"
            android:src="@mipmap/table"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/table_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="table"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_below="@id/table_picture"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="#FF8FF0"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>